{
  "name": "base-node-app",
  "private": true,
  "version": "0.0.1",
  "description": "A basic starter Node application",
  "main": "run.js",
  "engines": {
    "node": ">=9.0.0"
  },
  "scripts": {
    "start": "source ./contracts/exportAddresses.sh && nodemon ./run",
    "test": "source ./contracts/exportAddresses.sh && jest",
    "test:watch": "source ./contracts/exportAddresses.sh && jest --watch",
    "test:ci": "source ./contracts/exportAddresses.sh && jest --ci --forceExit",
    "lint": "eslint . --ignore-path .gitignore",
    "parity": "docker run -p 8545:8545 appliedblockchain/parity-solo",
    "contract-compile": "npm run --prefix ../contracts compile",
    "contract-deploy": "npm run --prefix ../contracts  deploy",
    "contract-export-addresses": "source ./contracts/exportAddresses.sh"
  },
  "eslintConfig": {
    "extends": "@appliedblockchain/eslint-config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appliedblockchain/base-node-app.git"
  },
  "keywords": [
    "node"
  ],
  "author": "Applied Blockchain",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/appliedblockchain/base-node-app/issues"
  },
  "homepage": "https://github.com/appliedblockchain/base-node-app#readme",
  "jest": {
    "setupTestFrameworkScriptFile": "./test/jest-config.js"
  },
  "devDependencies": {
    "@appliedblockchain/eslint-config": "^2.2.0",
    "eslint": "^4.19.1",
    "jest": "^23.1.0",
    "nodemon": "^1.18.6",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "@appliedblockchain/consul": "^1.0.2",
    "@appliedblockchain/contract-artefacts-deployer": "0.0.4",
    "@appliedblockchain/koa-docs": "^2.1.0",
    "@appliedblockchain/koa-healthcheck": "^1.1.0",
    "@appliedblockchain/mantle": "^1.0.10",
    "@appliedblockchain/store-contract-artefacts": "^0.3.0",
    "@koa/cors": "^2.2.1",
    "@sentry/node": "^4.3.0",
    "abi-decoder": "^1.2.0",
    "bunyan": "^1.8.12",
    "config": "^1.30.0",
    "elasticsearch": "^15.2.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-joi-router": "^5.1.0",
    "koa-respond": "^1.0.1",
    "lodash": "^4.17.11",
    "web3": "1.0.0-beta.33"
  }
}
