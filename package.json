{
  "name": "base-node-app",
  "private": true,
  "version": "0.0.1",
  "description": "A basic starter Node application",
  "main": "run.js",
  "engines": {
    "node": ">=9.0.0"
  },
  "scripts": {
    "start": "CONTRACT_ADDRESS=$(cat contractAddress.txt) node ./run",
    "start:dev": "CONTRACT_ADDRESS=$(cat contractAddress.txt) nodemon ./run",
    "test": "CONTRACT_ADDRESS=$(cat contractAddress.txt) jest",
    "test:watch": "CONTRACT_ADDRESS=$(cat contractAddress.txt) jest --watch",
    "test:ci": "CONTRACT_ADDRESS=$(cat contractAddress.txt) jest --ci --forceExit",
    "lint": "eslint . --ignore-pattern .gitignore",
    "parity": "docker run -p 8545:8545 appliedblockchain/parity-solo",
    "deploy-contract": "npx @appliedblockchain/contract-artefacts-deployer store-contract > contractAddress.txt",
    "deploy-contract-and-run": "npm run deploy-contract && npm run start"
  },
  "eslintConfig": {
    "extends": "@appliedblockchain/eslint-config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appliedblockchain/base-node-app.git"
  },
  "keywords": [
    "node"
  ],
  "author": "Jamie Allen",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/appliedblockchain/base-node-app/issues"
  },
  "homepage": "https://github.com/appliedblockchain/base-node-app#readme",
  "jest": {
    "setupTestFrameworkScriptFile": "./test/jest-config.js"
  },
  "devDependencies": {
    "@appliedblockchain/eslint-config": "^2.2.0",
    "eslint": "^4.19.1",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0"
  },
  "dependencies": {
    "@appliedblockchain/store-contract-artefacts": "^0.3.0",
    "@appliedblockchain/koa-healthcheck": "^1.1.0",
    "@koa/cors": "^2.2.1",
    "bunyan": "^1.8.12",
    "keyblade": "^0.3.2",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-docs": "^2.1.0",
    "koa-joi-router": "^5.1.0",
    "koa-respond": "^1.0.1",
    "web3": "^1.0.0-beta.33",
    "yenv": "^2.1.0"
  }
}
