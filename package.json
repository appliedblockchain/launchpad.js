{
  "name": "base-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "nsp": "^3.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-scripts": "^2.0.0-next.b2fd8db8",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6"
  },
  "scripts": {
    "start": "NODE_PATH=./src react-scripts start",
    "build": "NODE_PATH=./src react-scripts build",
    "pretest": "nsp check",
    "test": "NODE_PATH=./src react-scripts test --env=jsdom",
    "pretest:ci": "nsp check",
    "test:ci": "NODE_PATH=./src react-scripts test --env=jsdom --ci --testResultsProcessor='jest-multi-test-result-processor'",
    "lint": "eslint ./src --cache --ignore-pattern .gitignore",
    "lint:ci": "npm run lint -- --format junit --output-file reports/junit/eslint-results.xml",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/store/index.js",
      "!src/index.js",
      "!src/registerServiceWorker.js",
      "!src/setupTests.js",
      "!src/**/*.spec.js.snap"
    ]
  },
  "jest-multi-test-result-processor": {
    "processors": [
      "jest-junit",
      "html-jest-reporter"
    ]
  },
  "html-jest-reporter": {
    "outputPath": "reports/junit/index.html"
  },
  "eslintConfig": {
    "extends": "@appliedblockchain/eslint-config/react"
  },
  "devDependencies": {
    "@appliedblockchain/eslint-config": "^1.9.0",
    "babel-eslint": "^7.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.7.0",
    "eslint-plugin-react": "^7.6.1",
    "html-jest-reporter": "^1.0.0",
    "jest-junit": "^3.6.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.2.0",
    "redux-logger": "^3.0.6"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  }
}
